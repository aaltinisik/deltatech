<?xml version="1.0" ?>
<odoo>

    <record id="view_business_process_step_test_tree" model="ir.ui.view">
        <field name="name">Process step test</field>
        <field name="model">business.process.step.test</field>
        <field name="arch" type="xml">
            <tree string="Process steps" sample="1" create="false">
                <field name="process_id" optional="hide" />
                <field name="process_test_id" optional="hide" />
                <field name="step_id" optional="hide" />
                <field name="name" />
                <field name="transaction_id" />
                <field name="description" optional="hide" />
                <field name="data_used" />
                <field name="data_result" />
                <field name="responsible_id" optional="show" />
                <field name="date_start" optional="show" />
                <field name="date_end" optional="show" />
                <field
                    name="result"
                    widget="badge"
                    decoration-danger="result == 'failed'"
                    decoration-success="result == 'passed'"
                />
                <button
                    name="reset_draft"
                    type="object"
                    attrs="{'invisible': [('result', '=', 'draft')]}"
                    string="Draft"
                />
                <button name="do_pass" type="object" attrs="{'invisible': [('result', '=', 'passed')]}" string="Pass" />
                <button name="do_fail" type="object" attrs="{'invisible': [('result', '=', 'failed')]}" string="Fail" />


                <field name="feedback_by_id" optional="hide" />
                <field name="feedback_date" optional="hide" />
                <field
                    name="feedback_state"
                    widget="badge"
                    decoration-danger="result == 'not_ok'"
                    decoration-success="result == 'ok'"
                    optional="hide"
                />

                <field name="feedback_text" optional="hide" />

            </tree>
        </field>
    </record>

    <record id="view_business_process_step_test_from" model="ir.ui.view">
        <field name="name">Process step test</field>
        <field name="model">business.process.step.test</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box" />
                    <div class="oe_title">
                        <h1>
                            <field
                                name="name"
                                readonly="1"
                                groups="base.group_portal"
                                default_focus="1"
                                placeholder="Name"
                                class="oe_inline"
                            />
                            <field
                                name="name"
                                groups="base.group_user"
                                default_focus="1"
                                placeholder="Name"
                                class="oe_inline"
                            />
                            <field name="process_id" readonly="1" groups="base.group_portal" />
                            <field name="process_id" groups="base.group_user" />
                        </h1>
                    </div>

                    <group>
                        <group string="Identification">
                            <field name="process_test_id" readonly="1" groups="base.group_portal" />
                            <field name="process_test_id" groups="base.group_user" />
                            <field name="step_id" readonly="1" groups="base.group_portal" />
                            <field name="step_id" groups="base.group_user" />
                            <field
                                name="result"
                                readonly="1"
                                groups="base.group_portal"
                                decoration-danger="result == 'failed'"
                                decoration-success="result == 'passed'"
                            />
                            <field
                                name="result"
                                groups="base.group_user"
                                decoration-danger="result == 'failed'"
                                decoration-success="result == 'passed'"
                            />

                        </group>
                        <group string="Responsible">
                            <field name="responsible_id" readonly="1" groups="base.group_portal" />
                            <field name="responsible_id" groups="base.group_user" />
                        </group>
                        <group string="Transaction">
                            <field name="transaction_id" readonly="1" groups="base.group_portal" />
                            <field name="transaction_id" groups="base.group_user" />
                            <field name="description" readonly="1" groups="base.group_portal" />
                            <field name="description" groups="base.group_user" />
                        </group>
                        <group string="Date">
                            <field name="date_start" readonly="1" groups="base.group_portal" />
                            <field name="date_start" groups="base.group_user" />
                            <field name="date_end" readonly="1" groups="base.group_portal" />
                            <field name="date_end" groups="base.group_user" />
                        </group>
                        <group string="Data">
                            <field name="data_used" />
                            <field name="data_result" />
                        </group>
                        <group string="Verification">
                            <field name="feedback_by_id" />
                            <field name="feedback_date" />
                            <field name="feedback_state" />
                            <field name="feedback_text" />
                        </group>
                        <field name="observation" />
                    </group>

                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>


    <record id="view_business_process_step_test_calendar" model="ir.ui.view">
        <field name="name">Process step test</field>
        <field name="model">business.process.step.test</field>
        <field name="arch" type="xml">
            <calendar date_start="date_start" date_stop="date_end" mode="week" color="process_id" string="Process test">
                <field name="name" />
                <field name="process_id" filters="1" />
            </calendar>
        </field>
    </record>

    <record id="action_business_process_step_test" model="ir.actions.act_window">
        <field name="name">Process step test</field>
        <field name="res_model">business.process.step.test</field>
        <field name="view_mode">tree,form,pivot,calendar</field>
    </record>
