<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="journal_sale" model="account.journal">
        <field name="name">Sales Journal for record Type</field>
        <field name="type">sale</field>
        <field name="code">SRT</field>
    </record>

    <record id="demo_sale_order_type_standard" model="record.type">
        <field name="name">Type Standard</field>
        <field name="model">sale.order</field>
        <field
            name="default_values_ids"
            eval="[(0, 0, {'field_name': 'journal_id', 'field_value': ref('journal_sale'), 'field_type': 'id'}) ]"
        />
    </record>


</odoo>
