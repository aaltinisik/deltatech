<?xml version="1.0" encoding="utf-8" ?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.stock</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="31" />
            <field name="inherit_id" ref="sale.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//block[@name='invoicing_setting_container']" position="inside">
                    <setting id="sale_followup_email">
                        <field name="sale_followup" />
                        <div class="mt16" invisible="not sale_followup">
                            <field name="sale_followup_template_id" />
                        </div>
                    </setting>
                </xpath>
            </field>
        </record>
</odoo>
