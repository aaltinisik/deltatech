<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.website</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="50" />
        <field name="inherit_id" ref="stock_account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='valuation_setting_container']" position="inside">
                <setting
                    title="Set the valuation area level and the valuation area for the company."
                    id="module_deltatech_stock_valuation"
                >
                    <field name="module_deltatech_stock_valuation" />
                    <div class="content-group">
                        <div>
                            <label for="valuation_area_level" />
                            <field name="valuation_area_level" />
                        </div>
                        <div>
                            <label for="valuation_area_id" />
                            <field name="valuation_area_id" />
                        </div>
                    </div>
                    <button
                        type="object"
                        name="refresh_stock_valuation"
                        icon="fa-refresh"
                        string="Refresh Valuation"
                        class="btn-link"
                    />
                </setting>

            </xpath>
        </field>
    </record>
</odoo>
