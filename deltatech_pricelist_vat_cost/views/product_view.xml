<odoo>
    <record id="view_product_template_form" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <div name="pricing" position="after">
                <label for="standard_price_with_vat" invisible="product_variant_count>1" />
                <div class="o_row" invisible="product_variant_count>1">
                    <field name="standard_price_with_vat" />
                </div>
            </div>
        </field>
    </record>


    <record id="view_product_product_form" model="ir.ui.view">
        <field name="name">product.product.form.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view" />
        <field name="arch" type="xml">
            <div name="pricing" position="after">
                <label for="standard_price_with_vat" />
                <div class="o_row">
                    <field name="standard_price_with_vat" />
                </div>
            </div>
        </field>
    </record>
</odoo>
