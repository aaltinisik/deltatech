<?xml version="1.0" encoding="UTF-8" ?>
<templates>

    <t t-name="deltatech_website_stock_availability.lead_time_availability">
        <div t-attf-class="lead_time_availability_#{product_template} ">


            <div
                id="in_of_stock_message"
                t-if="free_qty gt 0"

                t-attf-class="availability_message_#{product_template} o_stock_available badge bg-success mt16 fw-bold"
            >

                In stock
            </div>


            <div
                id="in_of_stock_message"
                t-if="free_qty lte 0 and availability_vendor == 0"
                t-attf-class="availability_message_#{product_template}   badge bg-danger fw-bold"
            >
                <i class="fa fa-times me-1" />
                Out of stock
            </div>


            <div
                id="in_of_stock_message"
                t-if="free_qty lte 0 and availability_vendor gt 0"

                t-attf-class="availability_message_#{product_template} o_subsequent_delivery badge bg-warning fw-bold"
            >
                In stock at vendor
            </div>
        </div>
    </t>
    <t t-name="deltatech_website_stock_availability.lead_time_interval">
        <div t-attf-class="lead_time_interval_#{product_template} ">
            <i class="fa fa-calendar me-5" />
            <t t-set="po" t-value="0" />
            <t t-if="free_qty lte 0">
                <t t-if="availability_vendor and purchase_lead_time">
                    <t t-set="days" t-value="sale_delay+purchase_lead_time" />
                    <span t-if="days gt 7">
                        Delivery in
                        <t t-esc="Math.round(days/7)" />
                        weeks
                    </span>
                    <span t-else="">
                        <t t-if="purchase_lead_time lt 1 and purchase_lead_time gt 0">
                            <t t-set="purchase_lead_time" t-value="0" />
                            <span>Immediate delivery</span>
                        </t>
                        <t t-else="">
                            Delivery in
                            <t t-esc="sale_delay+purchase_lead_time" />
                            -
                            <t t-esc="sale_delay+sale_delay_safety+purchase_lead_time" />
                            days
                        </t>
                    </span>
                </t>
                <t t-else="">
                    <span>Delivery time unknown</span>
                </t>
            </t>
            <t t-else="">
                <span t-if="sale_delay gt 7">
                    Delivery in
                        <t t-esc="Math.round(days/7)" />
                    weeks
                </span>
                <span t-else="">
                    <t t-if="sale_delay gt 1">
                        Delivery in
                        <span t-if="sale_delay gt 0">
                            <t t-esc="sale_delay" />
                            -
                        </span>
                            <t t-esc="sale_delay+sale_delay_safety" />
                            days
                    </t>
                    <t t-if="sale_delay == 1">
                        <span>Delivery tomorrow</span>
                    </t>
                    <t t-if="sale_delay == 0">
                        <span>Immediate delivery</span>
                    </t>
                </span>
            </t>
            <!--            <i class="fa fa-info-circle"/>-->
        </div>
    </t>
</templates>
