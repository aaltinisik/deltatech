<?xml version="1.0" ?>
<odoo>

    <record id="view_order_form_extra" model="ir.ui.view">
        <field name="name">sale.order.form.extra</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/list/field[@name='sequence']" position="before">
                <field name="line_uuid" column_invisible="True" force_save="1" />
            </xpath>
        </field>
    </record>

</odoo>
